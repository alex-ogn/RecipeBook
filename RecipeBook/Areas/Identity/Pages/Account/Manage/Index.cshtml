@page
@model RecipeBook.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Моят профил";
}

<h1 class="mb-4">Редактирай профил</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Input.UserName" class="form-label"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.ProfilePicture" class="form-label"></label>
                <input asp-for="Input.ProfilePicture" type="file" accept="image/*" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Запази промените</button>
        </div>

        <div class="col-md-4">
            <label>Текуща профилна снимка:</label>
            <img src="@Url.Action("GetProfilePicture", "Users", new { userId = Model.Input.Id, pictureVersion = Model.Input.ProfilePictureVersion })"
                 class="img-thumbnail mt-2"
                 style="width: 200px; height: 200px; object-fit: cover;" />
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
