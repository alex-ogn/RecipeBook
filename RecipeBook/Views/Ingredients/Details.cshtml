@model RecipeBook.Models.Ingredient

@{
    ViewData["Title"] = "Детайли за съставка";
}

<div class="container mt-4">
    <h1 class="mb-4">Детайли за съставка</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-muted">Име на съставка:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 text-muted">Категория:</dt>
                <dd class="col-sm-9">@Model.IngredientCategory?.Name</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-between">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
            <i class="bi bi-pencil-square"></i> Редактирай
        </a>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left"></i> Назад към списъка
        </a>
    </div>
</div>
