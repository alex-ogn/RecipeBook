@model RecipeBook.Models.IngredientCategory

@{
    ViewData["Title"] = "Редакция на категория";
}

<h1 class="mb-4">Редактирай категория</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">Запази</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Назад</a>
            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
