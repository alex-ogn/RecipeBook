@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Всички потребители";
}

<h1>Всички потребители</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Търси потребител..."
               value="@ViewData["Search"]" />
        <button type="submit" class="btn btn-outline-primary">Търси</button>
    </div>
</form>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Потребителско име</th>
            <th>Имейл</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Action("GetProfilePicture", "Users", new { userId = user.Id, user.ProfilePictureVersion })"
     alt="Профилна снимка"
     class="rounded-circle"
     style="width: 100px; height: 100px; object-fit: cover;" /> 
 </td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Редактирай</a>
                </td>
            </tr>
        }
    </tbody>
</table>
