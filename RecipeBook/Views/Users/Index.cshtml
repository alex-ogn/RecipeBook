@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "Потребители";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Потребители</h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="search" class="form-control" placeholder="Търси потребител..." value="@ViewData["Search"]" />
            <button type="submit" class="search-icon-button">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>

    <table class="table table-bordered table-hover align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th style="width: 100px;">Снимка</th>
                <th>Потребителско име</th>
                <th>Имейл</th>
                <th style="width: 150px;">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <img src="@Url.Action("GetProfilePicture", "Users", new { userId = user.Id, pictureVersion = user.ProfilePictureVersion })"
                         class="rounded-circle"
                         style="width: 70px; height: 70px; object-fit: cover;" />
                    </td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary me-1" title="Редактирай">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info me-1" title="Детайли">
                            <i class="bi bi-info-circle"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
