@model RecipeBook.ViewModels.Users.EditUserViewModel

@{
    ViewData["Title"] = "Потребител";
}

<div class="container mt-4">
    <h1 class="mb-4">Преглед на потребител</h1>

    <div class="row">
        <div class="col-md-6">
                        <label class="form-label">Профилна снимка:</label>
            <img src="@Url.Action("GetProfilePicture", "Users", new { userId = Model.Id, pictureVersion = Model.ProfilePictureVersion })"
                 class="img-thumbnail mt-2"
                 style="width: 200px; height: 200px; object-fit: cover;" />

            <br/> <br/>

            <dl class="row">
                <dt class="col-sm-4">Потребителско име:</dt>
                <dd class="col-sm-8">@Model.UserName</dd>

                <dt class="col-sm-4">Имейл:</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Телефон:</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>
            </dl>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary me-2">
                    <i class="bi bi-pencil"></i> Редактирай
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Назад
                </a>
            </div>
        </div>
    </div>
</div>
