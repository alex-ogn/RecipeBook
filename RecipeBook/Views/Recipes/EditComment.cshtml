@model RecipeBook.Views.Recipes.ViewModels.CommentEditViewModel
@{
    ViewData["Title"] = "Редактирай коментар";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditComment" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Запази промените</button>
    <a asp-action="Details" class="btn btn-secondary mt-2">Отказ</a>
</form>
