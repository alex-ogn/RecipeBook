@using RecipeBook.ViewModels.Recipes;
@model RecipeViewModel

@{
    ViewData["Title"] = "Детайли за рецепта";
    bool isUserAdmin = ViewData["IsUserAdmin"] as bool? ?? false;
    var currentUserId = ViewData["CurrentUserId"]?.ToString().Trim().ToLower();
    bool isSaved = ViewData["IsSaved"] as bool? ?? false;
    bool isLiked = ViewData["IsLiked"] as bool? ?? false;
    var likeCount = (int)(ViewData["LikeCount"] ?? 0);
}

<!-- Връзка към CSS файла -->
<link rel="stylesheet" href="~/css/recipe-details.css" />

<div class="recipe-container">
    <h1 class="recipe-title">@Model.Title</h1>

    <!-- Снимка + дясна колона -->
    <div class="recipe-main">
        <img src="@Url.Action("GetImage", "Recipes", new { id = Model.Id })" class="recipe-image" alt="@Model.Title">

        <div class="recipe-side-info">
            <!-- Потребителска секция -->
            <div class="white-box profile-box">
                <a asp-controller="Recipes" asp-action="MyIndex" asp-route-id="@Model.User.Id">
                    <img src="@Url.Action("GetProfilePicture", "Users", new { userId = Model.User.Id })" class="profile-avatar" alt="Потребител" />
                </a>
                <a asp-controller="Recipes" asp-action="MyIndex" asp-route-id="@Model.User.Id" class="fw-bold">
                    @Model.User.UserName
                </a>
            </div>

            <!-- Инфо за порции и др. -->
            <div class="white-box">
                <p><strong>Порции:</strong> @Model.Servings</p>
                <p><strong>Време за готвене:</strong> @Model.CookingTime минути</p>
                <p><strong>Категория:</strong> @Model.RecipeCategory?.Name</p>
                <p><strong>Преглеждания:</strong> @Model.ViewCount</p>
                <p><strong>Дата на добавяне:</strong> @Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</p>

                @if (Model.IsVegetarian)
                {
                    <span class="badge bg-success">Вегетарианска</span>
                }
                @if (Model.IsVegan)
                {
                    <span class="badge bg-success">Веган</span>
                }
                @if (Model.IsGlutenFree)
                {
                    <span class="badge bg-warning text-dark">Без глутен</span>
                }
                @if (Model.IsLactoseFree)
                {
                    <span class="badge bg-warning text-dark">Без лактоза</span>
                }

                <br/> </br/>
                 <div class="d-flex gap-3 align-items-center">           
                    <!-- Харесване -->
                    <form asp-action="@(isLiked ? "Unlike" : "Like")" method="post" class="icon-form" title="Харесай">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="icon-button">
                            <i class="bi bi-heart-fill @(isLiked ? "text-danger" : "text-secondary")"></i>
                            <span>@likeCount</span>
                        </button>
                    </form>

                    <!-- Запазване -->
                    <form asp-action="@(isSaved ? "UnsaveRecipe" : "SaveRecipe")" method="post" class="icon-form" title="Запази">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="icon-button">
                            <i class="bi @(isSaved ? "bi-bookmark-fill text-warning" : "bi-bookmark text-secondary")"></i>
                        </button>
                    </form>

                    <form asp-action="ExportPdf" asp-route-id="@Model.Id" method="get" target="_blank" class="icon-form" title="Изтегли като PDF">
                        <button type="submit" class="icon-button">
                            <i class="bi bi-file-earmark-arrow-down text-secondary"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Съставки -->
    <div class="section-box">
        <h4>Съставки</h4>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Продукт</th>
                    <th>Количество</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RecipeIngredients)
                {
                    <tr>
                        <td>@item.Ingredient.Name</td>
                        <td>@item.QuantityNeeded</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Описание и инструкции -->
    <div class="section-box">
        <h4>Описание</h4>
        <div class="formatted-text">
            @Html.Raw(Model.Description)
        </div>

        <h4 class="mt-4">Инструкции</h4>
        <div class="formatted-text">
            @Html.Raw(Model.Instructions)
        </div>
    </div>

    <div class="section-box">
        <form asp-action="AddComment" method="post">
            <input type="hidden" name="recipeId" value="@Model.Id" />
            <div class="mb-2">
                <textarea name="content" class="form-control" placeholder="Напиши коментар..." required></textarea>
            </div>
            <button type="submit" class="btn btn-sm btn-outline-success">Публикувай</button>
        </form>

        <br />
    <h5>Коментари:</h5>
    @if (Model.Comments != null && Model.Comments.Any())
    {
        @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
        {
            <div class="border rounded p-2 mb-2 bg-light">
                <p class="mb-1">@comment.Content</p>
                <small class="text-muted">от @comment.User.UserName на @comment.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</small>

                @if (User.Identity.IsAuthenticated && (isUserAdmin || comment.UserId == ViewData["CurrentUserId"]?.ToString()))
                {
                        <form asp-action="EditComment" method="get" class="d-inline ms-2">
                            <input type="hidden" name="id" value="@comment.Id" />
                            <button type="submit" class="comment-action-btn edit">Редактирай</button>
                        </form>
                }
              
                @if (User.Identity.IsAuthenticated && (isUserAdmin || comment.UserId == ViewData["CurrentUserId"]?.ToString() || Model.UserId == currentUserId))
                {
                        <form asp-action="DeleteComment" method="post" class="d-inline ms-2">
                            <input type="hidden" name="id" value="@comment.Id" />
                            <button type="submit" class="comment-action-btn delete">Изтрий</button>
                        </form>
                }

            </div>
        }
    }
    else
    {
       <p class="text-muted">Няма добавени коментари.</p>
    }
    </div>

    <!-- Бутони -->
    <div class="mb-5">
        @if (Model.UserId == currentUserId || isUserAdmin)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактирай</a>
        }

        <a asp-action="Index" class="btn btn-secondary">Обратно към списъка</a>
    </div>

    @if (Model.SimilarRecipes?.Any() == true)
    {
        @if (Model.SimilarRecipes?.Any() == true)
        {
            <h1>Подобни рецепти</h1>

            <div class="row">
                @foreach (var recipe in Model.SimilarRecipes)
                {
                    @Html.Partial("_RecipeCard", recipe)
                }
            </div>
        }
    }

</div>
