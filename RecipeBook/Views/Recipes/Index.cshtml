@using RecipeBook.ViewModels.Enums;
@using RecipeBook.ViewModels.Recipes;

@model RecipeFilterViewModel

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h1 class="display-5 mb-2">Рецепти</h1>
        <a asp-action="Create" class="btn btn-success">+ Нова рецепта</a>
    </div>

    @if (TempData["SearchResults"] != null)
{
    <div class="alert alert-info mt-3">
        Резултати от търсене за: <strong>@TempData["SearchResults"]</strong>
    </div>
}

    <form asp-action="Index" method="get" class="mb-4">
        <div class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Категория:</label>
                <select name="categoryId" asp-items="@Model.Categories" class="form-select">
                    <option value="">Всички</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Сортирай по:</label>
                <select name="sortOrder" class="form-select">
                    @foreach (RecipeSortOption option in Enum.GetValues(typeof(RecipeSortOption)))
                    {
                        var label = option switch
                        {
                            RecipeSortOption.Newest => "Най-нови",
                            RecipeSortOption.MostLiked => "Най-харесвани",
                            RecipeSortOption.MostViewed => "Най-гледани",
                            _ => option.ToString()
                        };

                        <option value="@option" selected="@(Model.SortOrder == option)">
                            @label
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2 d-grid">
                <button type="submit" class="btn btn-primary">Филтрирай</button>
            </div>
            <div class="col-md-2 d-grid">
                <a asp-action="Index" class="btn btn-outline-secondary">Изчисти</a>
            </div>
        </div>
    </form>

    @if (Model.Recipes.Any())
    {
        <div class="row">
            @foreach (var card in Model.Recipes)
            {
                @Html.Partial("_RecipeCard", card)
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">Няма рецепти по избрания филтър.</div>
    }
</div>


