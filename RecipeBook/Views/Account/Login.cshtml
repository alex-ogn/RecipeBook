@model RecipeBook.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">
            <h2 class="text-center text-warm-red mb-4">Вход в акаунта</h2>

            <form asp-action="Login" method="post">

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="text-danger mb-3">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                <div class="form-group mb-3">
                    <label asp-for="Identifier" class="form-label"></label>
                    <input asp-for="Identifier" class="form-control" />
                    <span asp-validation-for="Identifier" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Запомни ме</label>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn"
                            style="background-color: var(--buttery-yellow); color: white;">
                        Вход
                    </button>
                </div>

                <div class="text-center mt-3">
                    <a asp-action="Register" class="text-decoration-none">Нямаш акаунт? Регистрирай се</a>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

